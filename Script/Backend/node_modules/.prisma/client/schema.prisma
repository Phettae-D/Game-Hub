// Prisma Schema for Game Hub

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid())
  username       String   @unique @db.VarChar(50)
  email          String   @unique @db.VarChar(100)
  password       String   @db.VarChar(255)
  fullName       String?  @map("full_name") @db.VarChar(100)
  profilePicture String?  @map("profile_picture") @db.VarChar(255)
  bio            String?  @db.Text
  createdAt      DateTime @default(now()) @map("created_at")

  games Game[]

  @@map("users")
}

model Game {
  id         String   @id @default(uuid())
  title      String   @db.VarChar(200)
  shortDesc  String?  @map("short_desc") @db.Text
  fullDesc   String?  @map("full_desc") @db.Text
  gameType   String?  @map("game_type") @db.VarChar(50)
  tags       Json?
  coverImage String?  @map("cover_image") @db.VarChar(255)
  gameFile   String?  @map("game_file") @db.VarChar(255)
  creatorId  String?  @map("creator_id")
  createdAt  DateTime @default(now()) @map("created_at")

  creator User? @relation(fields: [creatorId], references: [id], onDelete: SetNull)

  @@index([creatorId])
  @@map("games")
}
